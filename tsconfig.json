{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",                          
    "module": "commonjs",                    
    "lib": ["ES2021", "ES2015", "DOM"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "./node_modules/*",
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
  },
  "exclude": [
    "ecosystem.config.js",
    "src/controller/**/*.*",
    "build/**"
  ]
}